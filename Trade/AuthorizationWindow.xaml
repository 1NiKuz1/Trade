<Window x:Class="Trade.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trade"
        mc:Ignorable="d"
        Title="AuthorizationWindow" Height="450" Width="800">
    <Grid Margin="40,60,40,60">
    <Grid.RowDefinitions>
      <RowDefinition Height="60" />
      <RowDefinition />
    </Grid.RowDefinitions>
    <TextBlock Grid.Row="0" Text="Авторизация" FontSize="24" TextAlignment="Center" FontFamily="Comic Sans MS"/>
    <Frame x:Name="RootFrame" Grid.Row="1" NavigationUIVisibility="Hidden" />
  </Grid>
</Window>
