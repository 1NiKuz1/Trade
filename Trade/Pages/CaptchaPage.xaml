<Page x:Class="Trade.Pages.CaptchaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Trade.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CaptchaPage">

    <Grid>
    <StackPanel Orientation="Vertical">
      <TextBlock Text="Капча" FontSize="16" Margin="0, 0, 0, 10" FontFamily="Comic Sans MS"/>
      <TextBox x:Name="captchaText" TextDecorations="Strikethrough" IsReadOnly="True" IsEnabled="False" Padding="10, 10" Margin="0, 0, 0, 10" FontFamily="Comic Sans MS" />
      <TextBlock Text="Введите капчу" FontSize="16" Margin="0, 0, 0, 10" FontFamily="Comic Sans MS"/>
      <TextBox x:Name="inputCaptchaText"  Padding="10, 10" FontFamily="Comic Sans MS" Margin="0, 0, 0, 20"/>
      <Button x:Name="submitButton" Content="Отправить" FontSize="14" Padding="40, 8" HorizontalAlignment="Left"
              Background="#498c51" Foreground="White" BorderThickness="0" FontWeight="Medium" FontFamily="Comic Sans MS" Click="SubmitButton_Click"/>
    </StackPanel>
    </Grid>
</Page>
